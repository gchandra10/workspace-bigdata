{
    "name": "Big Data Engineering - Azure & Python",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installYarn": false,
            "installOhMyZsh": true,
            "upgradePackages": false
        },
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest",
            "installDockerCompose": true
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y jq htop postgresql-client && curl -LsSf https://astral.sh/uv/install.sh | sh && /root/.local/bin/uv pip install --system ruff pytest duckdb parquet-tools visidata csvkit pandas polars pgcli",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker",
                "ms-vscode.azurecli",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg",
                "mechatroner.rainbow-csv",
                "dvirtz.parquet-viewer",
                "tamasfe.even-better-toml",
                "clinyong.vscode-data-preview"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "editor.codeActionsOnSave": {
                    "source.fixAll.ruff": "explicit",
                    "source.organizeImports.ruff": "explicit"
                },
                "rainbow_csv.autodetect": true,
                "evenBetterToml.formatter.alignEntries": true
            }
        }
    },
    "remoteUser": "root",
    "forwardPorts": [
        5000,
        5001,
        8000,
        8001,
        8501,
        8080,
        8888
    ]
}